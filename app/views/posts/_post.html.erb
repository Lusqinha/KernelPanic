<div id="<%= dom_id post %>" class="my-10 mb-24 space-y-5 mx-auto post-content">
  <div class="flex md:mx-10 flex-col border-b-2 border-[#2d2d2d] md:flex-row">    
    <div class="flex gap-3 mb-5">
      <% if post.user.avatar.attached? %>
        <%= image_tag post.user.avatar, class: "rounded-full w-20" %>
      <% end %>
      <div class="flex flex-col justify-center ">
        <span class="font-bold text-xl"><%= post.user.name %></span>
        <span class="text-gray-500"><%= time_ago_in_words(post.created_at).capitalize %> atrÃ¡s</span>
      </div>
    </div> 
  </div>
  <div class="md:px-10 bg-[#14161a] text-lg sm:text-xl text-justify">
    <h2 class="font-bold text-center md:text-left text-4xl mb-5"><%= link_to post.title, post_path(post) %></h2>
    <%= @post.content %>
  </div>
</div>
