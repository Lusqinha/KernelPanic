<div id="<%= dom_id post %>" class="my-10 mb-24 space-y-5 mx-auto post-content">
  <div class="flex md:mx-10 flex-col border-b-2 border-[#2d2d2d] md:flex-row">    
    <div class="flex gap-3 mb-5">
      <% if post.user.avatar.attached? %>
        <%= image_tag post.user.avatar, class: "rounded-full w-16 sm:w-20" %>
      <% end %>
      <div class="flex flex-col justify-center ">
        <span class="font-bold text-xl"><%= post.user.name %></span>
        <span class="text-gray-500"><%= time_ago_in_words(post.created_at).capitalize %> atrás</span>
      </div>
    </div> 
  </div>
  <div class="md:px-10 bg-[#14161a] text-lg sm:text-xl text-justify border-b-2 pb-5 border-[#2d2d2d]">
    <h2 class="font-extrabold text-left md:text-left text-2xl md:text-4xl pb-5 mb-5 border-b border-gray-500 "><%= link_to post.title, post_path(post) %></h2>
    <%= @post.content %>
  </div>
  <% if @post.spotify_track_url? %>
    <div class="flex flex-col gap-3 mx-auto bg-[#121418] rounded-xl p-5 w-full md:w-4/5 lg:w-2/3">
      <h3 class="text-center text-xl md:text-3xl font-bold" > Ouça no mesmo tema </h3>
      <iframe style="border-radius:12px" src=<%= @post.spotify_track_url %> width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"
      class="mx-auto"
      ></iframe>
    </div>
  <%end%>

</div>
